{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "CrudeCards: Multi Browser",
            "configurations": [
                "CC: Full Stack",
                "CC: Backend",
                "CC: Multi Browser"
            ]
        },
        {
            "name": "CC: Full Stack Single Browser",
            "configurations": [
                "CC: Full Stack",
                "CC: Backend",
            ]
        }
    ],
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "CC: Backend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/api/src/main.ts",
            "console": "integratedTerminal",
            // "cwd": "${workspaceFolder}/src/api",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "--prefix",
                "src/api",
                "run",
                "start:dev"
            ]
        },
        {
            "name": "CC: Full Stack",
            "type": "node-terminal",
            "request": "launch",
            "command": "pnpm run dev",
            "serverReadyAction": {
                "pattern": "- Local:.+(https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            }
        },
        {
            "name": "CrudeCards: Storybook",
            "type": "node-terminal",
            "request": "launch",
            "command": "pnpm run storybook"
        },
        {
            "name": "CrudeCards: Next.js Server",
            "type": "node-terminal",
            "request": "launch",
            "command": "pnpm run dev"
        },
        {
            "name": "CC: Multi Browser",
            "type": "node-terminal",
            "request": "launch",
            "command": "pnpm run puppet"
        }
    ],
}
