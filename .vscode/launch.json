{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "CW: Backend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/api/src/main.ts",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src/api",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:dev"
            ]
        },
        {
            "name": "CW: Full Stack",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "serverReadyAction": {
                "pattern": "- Local:.+(https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            }
        },
        {
            "name": "CW: Storybook",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run storybook"
        },
        {
            "name": "CW: Next.js Server",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev"
        },
        {
            "name": "CW: Multi Browser",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run puppet"
        }
    ],
    "compounds": [
        {
            "name": "CW: Launch Multi Browser",
            "configurations": [
                "CW: Full Stack",
                "CW: Backend",
                "CW: Multi Browser"
            ]
        },
        {
            "name": "CW: Full Stack Single Browser",
            "configurations": [
                "CW: Full Stack",
                "CW: Backend",
            ]
        }
    ]
}
