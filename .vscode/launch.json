{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "CrudeCards: Multi Browser",
            "configurations": [
                "Frontend",
                "Backend",
                "Multi Browser"
            ]
        },
        {
            "name": "CrudeCards: Single Browser",
            "configurations": [
                "Frontend",
                "Backend",
            ]
        }
    ],
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Backend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/api/src/main.ts",
            "console": "integratedTerminal",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "--prefix",
                "src/api",
                "run",
                "start:dev"
            ]
        },
        {
            "name": "Frontend",
            "type": "node-terminal",
            "request": "launch",
            "command": "pnpm dev",
            "serverReadyAction": {
                "pattern": "- Local:.+(https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            }
        },
        {
            "name": "Narrative",
            "type": "node-terminal",
            "request": "launch",
            "command": "pnpm dev:narrative"
        },
        {
            "name": "Storybook",
            "type": "node-terminal",
            "request": "launch",
            "command": "pnpm storybook"
        },
        {
            "name": "Multi Browser",
            "type": "node-terminal",
            "request": "launch",
            "command": "pnpm puppet"
        }
    ],
}