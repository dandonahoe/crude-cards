{
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnType": false, // required
    "editor.formatOnPaste": true, // optional
    "editor.formatOnSave": true, // optional
    "editor.formatOnSaveMode": "file", // required to format on save
    "files.autoSave": "onFocusChange", // optional but recommended
    "files.exclude": {
        "amplify/.config": true,
        "amplify/**/*-parameters.json": true,
        "amplify/**/amplify.state": true,
        "amplify/**/transform.conf.json": true,
        "amplify/#current-cloud-backend": true,
        "amplify/backend/amplify-meta.json": true,
        "amplify/backend/awscloudformation": true,
        "node_modules": true,
        "src/office/outlook": true,
        "src/office/dist": true,
        "src/office/node_modules": true,
        "dist": true,
        "log": true,
        "package-lock.json": true,
        "src/office/package-lock.json": true
    },
    "eslint.enable": true,
    "eslint.validate": [
        "javascript",
        "html"
    ],
    "jest.jestCommandLine": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "jest.rootPath": ".",
    "search.exclude": {
        "internal/coverage": true,
        "src/api/coverage": true,
        "src/api/dist": true,
        "src/api/dist/*": true
    },
    "[typescript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[javascript]": {
        "editor.defaultFormatter": "trunk.io"
    },
    "livePreview.defaultPreviewPath": "/src/api/coverage/index.html"
}
